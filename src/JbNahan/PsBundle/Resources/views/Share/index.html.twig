{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Share list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dest</th>
                <th>Autodeleteat</th>
                <th>Viewtime</th>
                <th>Viewmaxcount</th>
                <th>Valititytime</th>
                <th>Key</th>
                <th>Viewcount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('share_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dest }}</td>
                <td>{% if entity.autoDeleteAt %}{{ entity.autoDeleteAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.viewTime }}</td>
                <td>{{ entity.viewMaxCount }}</td>
                <td>{{ entity.valitityTime }}</td>
                <td>{{ entity.key }}</td>
                <td>{{ entity.viewCount }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('share_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('share_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('share_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
